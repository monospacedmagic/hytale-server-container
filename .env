# Hytale server configuration
# Must accept the Hytale EULA.
EULA="TRUE"

AUTO_UPDATE="TRUE"

# Default:0.0.0.0 docker host IP. Optional: set your server IP.
SERVER_IP=""

# Default: 25565 optional: port the Hytale server listens on inside the container
SERVER_PORT="25565"

# Optional: extra JVM arguments for server tuning
JAVA_OPTS="-Xms128M -Xmx512M"

# User configuration
# Default: 1000 Optional: Host user UID for file permissions inside the container
UID=""

# Default: 1000 Optional: Host user GID for file permissions inside the container
GID=""

# Default: false. Runs production tests to check if the system is ready for real visitors!
PROD="TRUE"

# Default: UTC. Set timezone inside the container
TZ="Europe/Amsterdam"